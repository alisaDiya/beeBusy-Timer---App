<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Beebusyyellow"
    tools:context=".camera">


    <ImageView
        android:id="@+id/imageViewCam2"
        android:layout_width="157dp"
        android:layout_height="170dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.436"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btnCam2Choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/regbutton"
        android:text="choose picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewCam2"
        app:layout_constraintVertical_bias="0.15" />

    <Button
        android:id="@+id/btnCam2TakePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/regbutton"
        android:text="Capture picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCam2Choose"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/btnCam2Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/regbutton"
        android:text="upload picture"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCam2TakePic"
        app:layout_constraintVertical_bias="0.384" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="188dp"
        android:layout_height="196dp"
        app:layout_constraintBottom_toTopOf="@+id/imageViewCam2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/alisa" />
</androidx.constraintlayout.widget.ConstraintLayout>